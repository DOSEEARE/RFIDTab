<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/card_detail_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:text="Наименование: ТЕКСТ ЕК текст етк"
                        android:textColor="@color/blackColor"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/card_detail_pipe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:text="№ трубы: "
                        android:textColor="@color/blackColor"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/card_detail_nipple"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:text="№ ниппеля: "
                        android:textColor="@color/blackColor"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/card_detail_bond"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:text="№ муфты: "
                        android:textColor="@color/blackColor"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/card_detail_rfid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:text="№ RFID: 12424"
                        android:textColor="@color/blackColor"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/card_detail_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:text="Комментарии: 12424"
                        android:textColor="@color/blackColor"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/card_detail_problem_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:text="Проблемы с меткой: 12424"
                        android:textColor="@color/blackColor"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/marginHorizontal"
                app:layout_constraintTop_toBottomOf="@id/info_container">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/card_detail_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="3"
                    tools:listitem="@layout/item_image" />

                <TextView
                    android:id="@+id/card_detail_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/ic_gallery"
                    android:gravity="center"
                    android:text="Пусто"
                    android:textColor="#9E9E9E"
                    android:textSize="26sp"
                    android:visibility="gone"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/card_detail_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackColor"
        android:elevation="16dp"
        android:visibility="gone"
        tools:src="@drawable/ic_launcher_background" />

    <ImageButton
        android:id="@+id/card_detail_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginHorizontal"
        android:background="@drawable/ic_back"
        android:elevation="17dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/card_detail_image"
        app:layout_constraintTop_toTopOf="@id/card_detail_image" />

</androidx.constraintlayout.widget.ConstraintLayout>