<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/marginHorizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/main_task_btn"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/bg_main_button"
            android:text="Мои задания"
            android:textColor="@color/whiteColor"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/main_scan_btn"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/bg_main_button"
            android:text="Идентификация оборудования"
            android:textColor="@color/whiteColor"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/main_task_manager_btn"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/bg_main_button"
            android:text="Создать комлект для постановщика задач"
            android:textColor="@color/whiteColor"
            android:textSize="18sp" />
               <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/main_task_profile_btn"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/bg_main_button"
            android:text="Профиль"
            android:textColor="@color/whiteColor"
            android:textSize="18sp" />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>