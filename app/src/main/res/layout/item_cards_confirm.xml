<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/marginHorizontal"
    android:layout_marginVertical="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/card_confirmed_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:gravity="center"
            android:padding="6dp"
            android:textColor="@color/whiteColor"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Подтверждён" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/card_scan_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/marginHorizontal"
            android:src="@drawable/ic_nfc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--кнопка камеры-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/card_camera_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginHorizontal"
            android:layout_marginBottom="@dimen/marginHorizontal"
            android:backgroundTint="@android:color/holo_green_dark"
            android:padding="@dimen/marginHorizontal"
            android:src="@drawable/ic_camera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/card_scan_btn"
            app:layout_constraintTop_toBottomOf="@id/card_scan_btn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_confirmed_tv">

            <TextView
                android:id="@+id/card_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="Наименование: ТЕКСТ ЕК текст етк"
                android:textColor="@color/blackColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/card_pipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="№ трубы: "
                android:textColor="@color/blackColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/card_nipple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="№ ниппеля: "
                android:textColor="@color/blackColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/card_bond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="№ муфты: "
                android:textColor="@color/blackColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/card_rfid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="№ RFID: 12424"
                android:textColor="@color/blackColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/card_confirm_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="Комментарии: "
                android:textColor="@color/blackColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/card_confirm_problem_mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="Проблемы с меткой: "
                android:textColor="@color/blackColor"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="        "
                android:textColor="@color/blackColor"
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>